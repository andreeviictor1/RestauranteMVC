@model Prato
@{
    ViewData["Title"] = "Apagar prato";
}

<div class="text-center">
    <h3>
        Realmente deseja apagar este prato (@Model.Name)?
    </h3>
</div>

<!-- Quando o usuário confirmar, vai chamar o método ConfirmDelete -->
<a role="button" class="btn btn-danger" asp-controller="Prato" asp-action="ConfirmDelete" asp-route-id="@Model.Id">Confirmar</a>

<!-- Se o usuário quiser cancelar, ele será redirecionado para o Index -->
<a class="btn btn-secondary" asp-controller="Prato" asp-action="Index" role="button">Cancelar</a>